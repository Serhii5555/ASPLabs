@model TicketBookingWebsite.Models.Event

<h2>Delete Event</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this event?</h4>
</div>

<div class="mb-3">
    <strong>Name:</strong> @Model.Name <br />
    <strong>Date:</strong> @Model.Date.ToShortDateString() <br />
    <strong>Location:</strong> @Model.Location <br />
    <strong>Price:</strong> $@Model.Price <br />
    <strong>Available Tickets:</strong> @Model.AvailableTickets
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
