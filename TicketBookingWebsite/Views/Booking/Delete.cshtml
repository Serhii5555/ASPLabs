@model TicketBookingWebsite.Models.Booking

<h2>Delete Booking</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this booking?</h4>
</div>

<div class="mb-3">
    <strong>Customer Name:</strong> @Model.CustomerName <br />
    <strong>Email:</strong> @Model.CustomerEmail <br />
    <strong>Event:</strong> @Model.Event?.Name <br />
    <strong>Tickets:</strong> @Model.Quantity
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
